                </div>
            </div>
            <div class="default-form-row">
                {{ form_label(registrationForm.roles, 'Typ:') }}
                {{ form_widget(registrationForm.roles) }}
                <div class="default-form-errors">
                    {{ form_errors(registrationForm.roles) }}
